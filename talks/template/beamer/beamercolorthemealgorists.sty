\mode<presentation>

\definecolor{zatarainorange}{RGB}{255,102,0}
\definecolor{algoristsgreen}{RGB}{0,255,112}
\definecolor{tocayotskyblue}{RGB}{0,170,255}

\setbeamercolor{normal text}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=zatarainorange}

\setbeamercolor{background canvas}{parent=normal text}
\setbeamercolor{background}{parent=background canvas}

\setbeamercolor{structure}{fg=tocayotskyblue,bg=black}

\setbeamercolor{palette primary}{fg=white,bg=zatarainorange}
\setbeamercolor{palette secondary}{fg=black,bg=algoristsgreen!40}
\setbeamercolor{palette tertiary}{fg=white,bg=tocayotskyblue!90}
\setbeamercolor{palette quaternary}{fg=white,bg=algoristsgreen}

\setbeamercolor{titlelike}{parent=palette primary}

\setbeamercolor{block title}{fg=white,bg=tocayotskyblue}
\setbeamercolor{block title alerted}{use=alerted text,fg=black,bg=alerted text.fg!75!black}
\setbeamercolor{block title example}{use=example text,fg=white,bg=example text.fg!75!black}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!15!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!15!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!15!bg}

\setbeamercolor{sidebar}{bg=algoristsgreen}

\setbeamercolor{palette sidebar primary}{fg=black}
\setbeamercolor{palette sidebar secondary}{fg=black!75}
\setbeamercolor{palette sidebar tertiary}{fg=white!75}
\setbeamercolor{palette sidebar quaternary}{fg=white}

\setbeamercolor*{separation line}{fg=tocayotskyblue,bg=white}
\setbeamercolor*{fine separation line}{fg=tocayotskyblue,bg=white}

\mode
<all>
